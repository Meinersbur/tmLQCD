CC = @CC@
CCDEP = @CCDEP@
CFLAGS = @CFLAGS@ @OPTARGS@
LDFLAGS = @LDFLAGS@ @OPTARGS@
CCLD = $(CC)
LEX = @LEX@ 
AUTOCONF = @AUTOCONF@
LIBS = @LIBS@ 
SHELL = @SHELL@
OPTARGS = @OPTARGS@

LINK = $(CCLD) -o $@ ${LDFLAGS}
COMPILE = ${CC} -o $@ ${CFLAGS} 

TARGETS = read_input clover_eo hybrid linsolve xchange \
	expo hybrid_update observables start \
	geometry_eo linalg_eo ranlxs sw io

.SUFFIXES:

all: hybrid

Makefile: Makefile.in config.status
	CONFIG_FILES=$@ CONFIG_HEADERS= $(SHELL) ./config.status

flex_read_input: read_input.l
	${LEX} -i -t $< > read_input.c

${addsuffix .o, ${TARGETS}}: %.o: %.c %.h Makefile global.h
	${COMPILE} -c $< 

hybrid: ${addsuffix .o, ${TARGETS}} global.h
	 ${LINK} ${addsuffix .o, ${TARGETS}} $(LDFLAGS) $(LIBS)

clean:
	rm -f *.o hybrid
