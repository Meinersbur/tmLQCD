CC = @CC@
CCDEP = @CCDEP@
CFLAGS = @CFLAGS@ @OPTARGS@
LDFLAGS = @LDFLAGS@ @OPTARGS@
CCLD = $(CC)
LEX = @LEX@ 
AUTOCONF = @AUTOCONF@
LIBS = @LIBS@ 
SHELL = @SHELL@
OPTARGS = @OPTARGS@

LINK = $(CCLD) -o $@ ${LDFLAGS}
COMPILE = ${CC} -o $@ ${CFLAGS} 

MODULES = read_input clover_eo linsolve xchange \
	expo hybrid_update observables start \
	geometry_eo linalg_eo ranlxd sw io Hopping_Matrix \
	boundary deriv_Sb tm_operators getopt

PROGRAMS = hybrid hmc_tm
ALLOBJ = ${MODULES} ${PROGRAMS}


.SUFFIXES:

all: hybrid hmc_tm

Makefile: Makefile.in config.status
	CONFIG_FILES=$@ CONFIG_HEADERS= $(SHELL) ./config.status

flex_read_input: read_input.l
	${LEX} -i -t $< > read_input.c

${addsuffix .o, ${MODULES}}: %.o: %.c %.h Makefile global.h
	${COMPILE} -c $< 

${addsuffix .o, ${PROGRAMS}}: %.o: %.c Makefile global.h
	${COMPILE} -c $<

${PROGRAMS}: %: %.o ${addsuffix .o, ${MODULES}} 
	 ${LINK} ${addsuffix .o, ${MODULES}} $@.o $(LIBS)

clean:
	rm -f *.o hybrid
